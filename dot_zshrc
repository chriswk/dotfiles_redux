# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
export EDITOR="vim"
export GOPATH="$HOME/go"
# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="amuse"

plugins=(git direnv archlinux kubectl gpg-agent ssh-agent gradle mvn npm aws tmux)

source $ZSH/oh-my-zsh.sh

function select-repo() {
  local root=~/src
  echo -n $root/
  {
	  cd $root
	  ein t find
  } | sk -q "$1"
}

function cd-repo() {
  cd "$(select-repo $@)"
}

alias or=cd-repo
export PATH=$PATH:$HOME/bin:$HOME/.local/bin:$HOME/.yarn/bin:$HOME/.cargo/bin:$GOPATH/bin:$HOME/.bin:$HOME/.pulumi/bin:$HOME/.local/share/pnpm

export PATH=$PATH:/snap/bin
#[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"
source $HOME/.zshaliases
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1
source /home/chriswk/.config/op/plugins.sh

# bun completions
[ -s "/home/chriswk/.bun/_bun" ] && source "/home/chriswk/.bun/_bun"
eval "$(zoxide init zsh)"
alias cd=z
alias cat=bat

# pnpm
export PNPM_HOME="/home/chriswk/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end
eval "$(mise activate zsh)"
